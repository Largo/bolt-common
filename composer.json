{
    "name": "bolt/common",
    "description": "Common utilities for all Bolt libraries",
    "license": "MIT",
    "authors": [
        {
            "name": "Carson Full",
            "email": "carsonfull@gmail.com"
        },
        {
            "name": "Bob den Otter",
            "email": "bob@twokings.nl"
        }
    ],
    "require": {
        "php": "^7.1",
        "seld/jsonlint": "^1.4",
        "webmozart/assert": "^1.2",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "require-dev": {
        "bolt/codingstyle": "^2.0@dev",
        "escapestudios/symfony2-coding-standard": "^3.4",
        "friendsofphp/php-cs-fixer": "^2.4",
        "phpunit/phpunit": "^6.4",
        "symfony/phpunit-bridge": "^3.3"
    },
    "scripts": {
        "test": "phpunit",
        "lint": [
            "phpcbf",
            "php-cs-fixer fix"
        ]
    },
    "autoload": {
        "psr-4": {
            "Bolt\\Common\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bolt\\Common\\Tests\\": "tests"
        },
        "files": [
            "tests/Fixtures/JsonMocker.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
